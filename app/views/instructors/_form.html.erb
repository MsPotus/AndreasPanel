<%= form_for @instructor,  html: {class: "nifty_form"} do |f| %>
  <%= f.label :first_name %>:
  <%= f.text_field :first_name %>
  <%= f.label :last_name %>:
  <%= f.text_field :last_name%>
  <%= f.label :age %>:
  <%= f.number_field :age , min: '1', max: '149'%>
  <%= f.label :salary %>:
  <%= f.number_field :salary%>
  <%= f.label :highest_education %>:
  <%= f.text_field :highest_education%>
  <%= f.label :cohort_id %>:
  <%= f.text_field :cohort_id%>
  <%= f.submit "Create" %>
<% end %>
